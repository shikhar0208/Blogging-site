<h1>Home</h1>
<p>
    <%= homeContent %>
</p>
<% posts.forEach((post) => { %>

    <% const truncatedString = post.content.substring(0,100)%>
    
    <h1><%= post.title %></h1> 
    
    <p>
        <%= truncatedString + " ...." %>
        <a href="/posts/<%= post._id %>">Read more</a>
    </p>


<% }) %>


